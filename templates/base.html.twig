<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">

</head>
<body style="background: #f1f1f0;">

<div class="top_row">



    <div class="row" style="text-align: left;">
        <div class="col-md-4">
            {% if is_granted('ROLE_ADMIN') %}


                <ul class="nav nav-pills">
                    <li role="presentation" class="active"><a href="{{ path('user_index') }}">user list</a></li>
                    <li role="presentation"><a href="{{ path('user_new') }}">add user</a></li>
                    <li role="presentation"><a href="#">Messages</a></li>
                </ul>
            {% endif %}
        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4 ">
            <div class="session_info">


            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                <ul class="nav nav-pills">

                    <li role="presentation" class="dropdown" style="float: right;">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            {{ app.user.username }} {% if is_granted('ROLE_ADMIN') %}<span class="badge">admin</span>{% endif %} <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a
                                    class="btn-default btn-primary" href="{{ path('self_user_change_pass') }}">Change password</a>
                            </li>

                            <li><a
                                    class="dropdown-item" href="{{ path('logout') }}" title="Logout">
                                Logout
                            </a></li>

                        </ul>
                    </li>

                </ul>

            {% else %}
                Not logged in. <a
                    class="dropdown-item" href="{{ path('admin_login') }}">log in</a>
            {% endif %}
            </div>
        </div>
    </div>


</div>
<div class="main_content">
    {% block body %}
    {% endblock %}
</div>
{% block javascripts %}
    <script src="{{ asset('build/manifest.js') }}"></script>
    <script src="{{ asset('build/vendor.js') }}"></script>
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</body>
</html>
