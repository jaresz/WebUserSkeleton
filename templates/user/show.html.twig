{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{% for role in user.roles %}
                		{{ role }}<br>
                	{% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="pull-right"><a href="{{ path('user_index') }}" class="btn btn-default">back to list</a></div>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}